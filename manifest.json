{
  "manifest_version": 2,
  "name": "HappyMTB Toolbox",
  "version": "0.5",
  "description": "Anv√§ndbara funktioner till HappyMTB.org",
  "permissions": ["storage", "tabs", "http://happymtb.org/*"],
  "content_scripts": [
    {
      "matches": ["http://happymtb.org/forum/list.php/*"],
      "css": ["font-awesome/css/font-awesome.css",
              "bootstrap/css/bootstrap.css"],
      "js": [
        "jquery-2.0.3.min.js",
        "underscore-min.js",
        "bootstrap/js/bootstrap.min.js",
        "happymtb-toolbox-forum.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "settings.html",
    "rules_modal.html",
    "jquery-2.0.3.min.map",
    "underscore-min.map",
    "font-awesome/font/fontawesome-webfont.eot",
    "font-awesome/font/fontawesome-webfont.svg",
    "font-awesome/font/fontawesome-webfont.ttf",
    "font-awesome/font/fontawesome-webfont.woff",
    "bootstrap/fonts/glyphicons-halflings-regular.eot",
    "bootstrap/fonts/glyphicons-halflings-regular.svg",
    "bootstrap/fonts/glyphicons-halflings-regular.ttf",
    "bootstrap/fonts/glyphicons-halflings-regular.woff"
  ]
}
